{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Project",
      "dependsOn": [
        "Run Docker",
        "Run Backend",
        "Run Frontend",
        "Run Documentation"
      ],
      "presentation": {
        "reveal": "always",
        "revealProblems": "never",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Project without Documentation",
      "dependsOn": [
        "Run Docker",
        "Run Backend",
        "Run Frontend"
      ],
      "presentation": {
        "reveal": "always",
        "revealProblems": "never",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Docker",
      "type": "shell",
      "command": "./up.sh",
      "options": {
        "cwd": "./bin/docker"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Backend",
      "type": "shell",
      "hide": false,
      "command": "bash",
      "args": [
        "-c",
        "source ~/.nvm/nvm.sh && nvm use && NX_DAEMON=false yarn serve:api"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Frontend",
      "type": "shell",
      "hide": false,
      "command": "bash",
      "args": [
        "-c",
        "source ~/.nvm/nvm.sh && nvm use && NX_DAEMON=false yarn serve:web"
      ],
      "options": {
        "env": {
          "NODE_OPTIONS": "--max_old_space_size=8096"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Documentation",
      "type": "shell",
      "hide": false,
      "command": "bash",
      "args": [
        "-c",
        "source ~/.nvm/nvm.sh && nvm use && NX_DAEMON=false yarn serve:docs"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}